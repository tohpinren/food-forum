<h1><%= @post.title %></h1>

<p><%= @post.body %></p>

<ul>
    <li>
        <%= link_to "Edit Post", edit_post_path(@post) %>
    </li>
    <li>
        <%= button_to "Delete Post", @post, method: :delete %>
    </li>
</ul>

<h2>Comments</h2>
<%= render @post.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form'%>